<assembly>
	<id>binary</id>

	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/package/conf</directory>
			<outputDirectory>autoeasy/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/package/bin</directory>
			<outputDirectory>autoeasy/bin</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/package/lib</directory>
			<outputDirectory>autoeasy/lib</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>autoeasy/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<filtered>true</filtered>
		</fileSet>		
		<fileSet>
			<directory>src/main/package/resources</directory>
			<outputDirectory>autoeasy/resources</outputDirectory>
			<filtered>true</filtered>
		</fileSet>		
		
        <fileSet>
            <directory>${project.basedir}/modules/base/target</directory>
           <outputDirectory>autoeasy/lib</outputDirectory>
            <includes>
                <include>base*.jar</include>
            </includes>
        </fileSet>        
        <fileSet>
            <directory>${project.basedir}/modules/cli/target</directory>
           <outputDirectory>autoeasy/lib</outputDirectory>
            <includes>
                <include>cli*.jar</include>
            </includes>
        </fileSet>        
        <fileSet>
            <directory>${project.basedir}/modules/common-utils/target</directory>
           <outputDirectory>autoeasy/lib</outputDirectory>
            <includes>
                <include>common-utils*.jar</include>
            </includes>
        </fileSet>        
        <fileSet>
            <directory>${project.basedir}/modules/gui-core/sahi/target</directory>
           <outputDirectory>autoeasy/lib</outputDirectory>
            <includes>
                <include>sahi*.jar</include>
            </includes>
        </fileSet>    
         <fileSet>
            <directory>${project.basedir}/modules/gui-core/selenium/target</directory>
           <outputDirectory>autoeasy/lib</outputDirectory>
            <includes>
                <include>selenium*.jar</include>
            </includes>
        </fileSet>         
       
	</fileSets>
	
	<dependencySets>
		<dependencySet>
			<outputDirectory>autoeasy/lib</outputDirectory>
			<includes>
				<include>log4j:log4j:jar:1.2.17</include>
				<include>com.trilead:trilead-ssh2:jar:1.0.0-build217</include>
				<include>net.sf.opencsv:opencsv:jar:2.3</include>
				<include>org.testng:testng:jar:6.8.7</include>
				<include>com.beust:jcommander:jar:1.32</include>					
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>